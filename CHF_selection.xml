<system label="5G">

    <VARS>
        <VAR label="pcf_provides_address">
            <datatype>boolean</datatype>
            <controltype> environment </controltype>
            <fsm>SMF</fsm>
        </VAR>

         <VAR label="udm_provides_characteristics">
            <datatype>boolean</datatype>
            <controltype> environment </controltype>
            <fsm>SMF</fsm>
        </VAR>

        <VAR label="nrf_discover_requested">
            <datatype>boolean</datatype>
            <controltype>state</controltype>
            <possiblevalues>TRUE,FALSE</possiblevalues>
            <initialvalue>FALSE</initialvalue>
        </VAR>

        <VAR label="nrf_discover_completed">
            <datatype>boolean</datatype>
            <controltype>state</controltype>
            <possiblevalues>TRUE,FALSE</possiblevalues>
            <initialvalue>FALSE</initialvalue>
        </VAR>

        <VAR label="nrf_discover_good">
            <datatype>boolean</datatype>
            <controltype> environment </controltype>
            <fsm>SMF</fsm>
        </VAR>

        <VAR label="has_local_CHF_charactaristics">
            <datatype>boolean</datatype>
            <controltype> environment </controltype>
            <fsm>SMF</fsm>
        </VAR>

        <VAR label="incoming_pmf_init">
            <datatype>boolean</datatype>
            <controltype>environment</controltype>
            <fsm>SMF</fsm>
        </VAR>

        <VAR label="has_charging_identifier">
            <datatype>boolean</datatype>
            <controltype>state</controltype>
            <possiblevalues>TRUE,FALSE</possiblevalues>
            <initialvalue>FALSE</initialvalue>
        </VAR>
    </VARS>

    <FSMs>
        <FSM label="SMF">

            <states>
                <state>chf_unselected</state>
                <state>chf_selected</state>
            </states>

            <init_state>chf_unselected</init_state>

            
            <transitions>
                <transition label="pdu_T1">
                    <start>chf_unselected</start>
                    <end>chf_selected</end>

                    <condition>
                        incoming_pmf_init &amp; pcf_provides_address
                    </condition>

                    <actions>
                        <action label="has_charging_identifier = TRUE">
                            <channel label="internal">
                            <start> SMF </start>
                            <end> SMF </end>
                            </channel>
                        </action>
                    </actions>
                </transition>
            </transitions>

            
            <transitions>
                <transition label="pdu_session_initialize_udm">
                    <start>chf_unselected</start>
                    <end>chf_selected</end>

                    <condition>
                        incoming_pmf_init &amp; !pcf_provides_address &amp; udm_provides_characteristics
                    </condition>

                    <actions>
                        <action label="has_charging_identifier = TRUE">
                            <channel label="internal">
                            <start> SMF </start>
                            <end> SMF </end>
                            </channel>
                        </action>
                    </actions>
                </transition>
            </transitions>

            
            <transitions>
                <transition label="pdu_session_initialize_nrf_request">
                    <start>chf_unselected</start>
                    <end>chf_unselected</end>

                    <condition>
                        incoming_pmf_init &amp; !pcf_provides_address &amp; !udm_provides_characteristics &amp; !nrf_request_started
                    </condition>

                    <actions>
                        <action label="nrf_request_started = TRUE">
                            <channel label="internal">
                            <start> SMF </start>
                            <end> SMF </end>
                            </channel>
                        </action>
                    </actions>
                </transition>
            </transitions>

            
            <transitions>
                <transition label="pdu_session_initialize_nrf_complete">
                    <start>chf_unselected</start>
                    <end>chf_unselected</end>

                    <condition>
                        incoming_pmf_init &amp; !pcf_provides_address &amp; !udm_provides_characteristics &amp; nrf_request_started &amp; !nrf_request_completed
                    </condition>

                    <actions>
                        <action label="nrf_request_completed = TRUE">
                            <channel label="internal">
                            <start> SMF </start>
                            <end> SMF </end>
                            </channel>
                        </action>
                    </actions>
                </transition>
            </transitions>

            
            <transitions>
                <transition label="pdu_session_initialize_nrf">
                    <start>chf_unselected</start>
                    <end>chf_selected</end>

                    <condition>
                        incoming_pmf_init &amp; !pcf_provides_address &amp; !udm_provides_characteristics &amp; nrf_request_completed
                    </condition>

                    <actions>
                        <action label="has_charging_identifier = TRUE">
                            <channel label="internal">
                            <start> SMF </start>
                            <end> SMF </end>
                            </channel>
                        </action>
                    </actions>
                </transition>
            </transitions>

            
            <transitions>
                <transition label="pdu_session_initialize_local">
                    <start>chf_unselected</start>
                    <end>chf_selected</end>

                    <condition>
                        incoming_pmf_init &amp; !pcf_provides_address &amp; !udm_provides_characteristics &amp; !nrf_request_started &amp; !nrf_request_completed
                    </condition>

                    <actions>
                        <action label="has_charging_identifier = TRUE">
                            <channel label="internal">
                            <start> SMF </start>
                            <end> SMF </end>
                            </channel>
                        </action>
                    </actions>
                </transition>
            </transitions>

        </FSM>
    </FSMs>

</system>